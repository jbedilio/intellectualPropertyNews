<section class="container">
    <div class="row">
        <div class="col-lg-12 text-left" id="articles">
            {{#each result}}
            <h4>{{title}}</h4>
            <p>{{summary}}</p>
            <form action="/article/:id" method="POST">
                <textarea name="req.params.id" value="{{_id}}" placeholder="enter notes here"></textarea>
                <p>{{_id}}</p>
                <button id="read"><a href={{link}} target="_blank">Read Article</a></button>
                <button type="submit" id="submit">Add Note</button>
                <button id="save">Save Article</button>
                <button id="delete">Delete Article</button>
            </form>
                
            {{/each}}
        </div>
    </div>
</section>